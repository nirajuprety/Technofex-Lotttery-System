@{
    Layout = null; // We don't want to use a shared layout for this page
}

<!DOCTYPE html>
<html>
<head>
    <title>Upload Excel File</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 400px;
            margin: 100px auto;
            border: 1px solid #ccc;
            padding: 20px;
            text-align: center;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-upload {
            background-color: #007bff;
            color: #ffffff;
        }

            .btn-upload:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/img/logo.png" alt="Logo" class="logo" />
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="excelFile">Choose an Excel file:</label>
                <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xls, .xlsx" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-upload">Upload</button>
            </div>
        </form>
    </div>

   
</body>
</html>
