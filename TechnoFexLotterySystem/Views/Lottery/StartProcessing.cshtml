@{
    Layout = null; // We don't want to use a shared layout for this page
}

<!DOCTYPE html>
<html>
<head>
    <title>My Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Additional custom styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        .container {
            max-width: 400px;
            margin: 100px auto;
            border: 1px solid #ccc;
            padding: 20px;
            text-align: center;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .logo {
            max-width: 200px;
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .btn-start {
            background-color: #007bff;
            color: #ffffff;
        }

            .btn-start:hover {
                background-color: #0056b3;
            }

        .btn-back {
            background-color: #6c757d;
            color: #ffffff;
        }

            .btn-back:hover {
                background-color: #545b62;
            }
    </style>
</head>
<body>
    <div class="container">
        <img src="~/img/logo.png" alt="Logo" class="logo" />
        <form method="post" enctype="multipart/form-data">
          @*  <div class="form-group">
                <label for="excelFile">Choose an Excel file:</label>
                <input type="file" class="form-control" id="excelFile" name="excelFile" accept=".xls, .xlsx" />
            </div>*@
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-start">Start</button>
            </div>
            <div class="form-group">
                <a href="javascript:history.back()" class="btn btn-secondary btn-back">Back</a>
            </div>
        </form>
    </div>

    <!-- Optional: Add the following scripts if needed -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script> -->
</body>
</html>
